<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head"
      , metadata: site.metadata
      , title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }}">
    <div class="wrapper">
      <div class="sidebar">
        {% render "navbar"
          , metadata: site.metadata
          , resource: resource %}
        {% render "footer"
          , metadata: site.metadata %}
      </div>

      <main>
        {{ content }}
      </main>
    </div>
    <script>
      window.onload = function() {
        // Reset the form fields when the page loads
        document.getElementById("form").reset();
      };
    </script>
  </body>
</html>