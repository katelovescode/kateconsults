<!doctype html>
<html lang="{{ site.locale }}">
  <head>
    {% render "head"
      , metadata: site.metadata
      , title: data.title %}
  </head>
  <body class="{{ data.layout }} {{ data.page_class }}">
    <div class="navbar">{% render "navbar"
, metadata: site.metadata
, resource: resource %}</div>

    <main>
      {{ content }}
    </main>

    {% render "footer"
      , metadata: site.metadata %}
  </body>
</html>